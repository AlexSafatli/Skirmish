<Window x:Class="Skirmish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skirmish"
        mc:Ignorable="d"
        Title="Skirmish" Height="342" Width="300">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="260" Margin="10,41,0,0" VerticalAlignment="Top" Width="272" CanContentScroll="True">
            <StackPanel x:Name="panel" Height="250" Width="224">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Margin" Value="0,10,0,0"></Setter>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
